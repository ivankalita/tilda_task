@import 'utils/fonts.styl'
@import 'utils/mixins.styl'
@import 'utils/reset.styl'
@import 'utils/vars.styl'

@import 'comps/header.styl'
@import 'comps/footer.styl'
@import 'comps/page_block.styl'
@import 'comps/ui_kit.styl'
@import 'comps/cards.styl'


*
    Montserrat()
    box-sizing border-box
    color $black

body
    position relative


.LAYOUT-APP
    display flex
    min-height 100vh
    max-width 1600px
    paddingLeftRight(60px)
    marginLeftRight(auto)
    flex-direction column
    overflow hidden auto


.body-start
    display none
    flex-grow 1
    align-items center
    justify-content center
    Montserrat()
    padding-bottom 100px
    &[active]
        display flex




.body-custom-lenta
    position relative
    display none
    padding-bottom 100px
    Montserrat()
    &[active]
        display block

.body-finished
    display none
    flex-grow 1
    flex-flow column nowrap
    padding-bottom 100px
    Montserrat()
    &__title
        paddingTopBottom(40px, 50px)
        font-size $fontTitle
        line-height 120%
        text-align center
    &__subtitle
        font-size $fontSubtitle
        line-height 120%
        text-align center
    &__body
        display flex
        flex-grow 1
        flex-flow column
        align-items center
        justify-content center
        .image
            margin-bottom 70px
        .text
            margin-bottom 25px
        .timer
            &-bold
                font-weight bold
    &[active]
        display flex
